@page
@using UserStoryManager.Models
@model UserStoryManager.Pages.UserStory.UserStoriesModel
@{
}
<h1>User Stories</h1>

    @*  0 = Stories
        1 =  To Do
        2 = In Progress
        3 = To Verify
        4 = Donedone*@


<div class="container">
    <h3 class="font-weight-light text-white">Kanban Board</h3>
    <div class="small  text-light">Drag and drop between swim lanes</div>

    <div class="row flex-row flex-sm-nowrap py-3">
        <div class="col-3">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title text-uppercase text-truncate py-2">To Do</h6>
                    <div class="items border border-light">
                        @foreach (var us in Model.UserStories)
                        {
                            if (us.State == 1)
                            {
                                <div class="card mb-2" style="width: 30rem;">
                                    <div class="card-header p-2">
                                        <h5 class="card-title">(@us.Id) @us.Title</h5>
                                    </div>
                                    <div class="card-body">
                                        @us.Description
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                                        <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                                        <form method="post">
                                            <button type="submit" class="btn btn-primary" asp-route-id="@us.Id">Move</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title text-uppercase text-truncate py-2">Doing</h6>
                    <div class="items border border-light">
                        @foreach (var us in Model.UserStories)
                        {
                            if (us.State == 2)
                            {
                                <div class="card mb-2" style="width: 30rem;">
                                    <div class="card-header p-2">
                                        <h5 class="card-title">(@us.Id) @us.Title</h5>
                                    </div>
                                    <div class="card-body">
                                        @us.Description
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                                        <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                                        <form method="post">
                                            <button type="submit" class="btn btn-primary" asp-route-id="@us.Id">Move</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title text-uppercase text-truncate py-2">Done</h6>
                    <div class="items border border-light">
                        @foreach (var us in Model.UserStories)
                        {
                            if (us.State == 3)
                            {
                                <div class="card mb-2" style="width: 30rem;">
                                    <div class="card-header p-2">
                                        <h5 class="card-title">(@us.Id) @us.Title</h5>
                                    </div>
                                    <div class="card-body">
                                        @us.Description
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                                        <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                                        <form method="post">
                                            <button type="submit" class="btn btn-primary" asp-route-id="@us.Id">Move</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title text-uppercase text-truncate py-2">Done Done</h6>
                    <div class="items border border-light">
                        @foreach (var us in Model.UserStories)
                        {
                            if (us.State == 4)
                            {
                                <div class="card mb-2" style="width: 30rem;">
                                    <div class="card-header p-2">
                                        <h5 class="card-title">(@us.Id) @us.Title</h5>
                                    </div>
                                    <div class="card-body">
                                        @us.Description
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                                        <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                                        <form method="post" asp-page="UserStories">
                                            <a class="btn" type="submit" asp-page-handler="Reset" asp-route-id="@us.Id"><i class="fas fa-arrow-right"></i></a>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


