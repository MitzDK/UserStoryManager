@page
@using UserStoryManager.Models
@model UserStoryManager.Pages.UserStory.UserStoriesModel
@{
}
<h1>User Stories</h1>

    @* 0 = Stories
        1 =  To Do
        2 = In Progress
        3 = To Verify
        4 = Donedone*@


<div class="card-deck">
    <div class="card mb-2" style="width: 30rem;">
        <div class="card-header p-2">
            <h5 class="card-title">To Do</h5>
        </div>
        <div class="card-body">
            @foreach (var us in Model.UserStories)
            {
                if (us.State == 1)
                {
                    <div class="card mb-2" style="">
                        <div class="card-header p-2">
                            <h5 class="card-title">(@us.Id) @us.Title</h5>
                        </div>
                        <div class="card-body">
                            @us.Description
                        </div>
                        <div class="card-footer">
                            <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                            <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                            <form method="post">
                                <button type="submit" class="btn btn-primary" asp-route-id="@us.Id">Move</button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>



    <div class="card mb-2" style="width: 30rem;">
        <div class="card-header p-2">
            <h5 class="card-title">In Progress</h5>
        </div>
        <div class="card-body">
            @foreach (var us in Model.UserStories)
            {
                if (us.State == 2)
                {
                    <div class="card mb-2" style="width: 30rem;">
                        <div class="card-header p-2">
                            <h5 class="card-title">(@us.Id) @us.Title</h5>
                        </div>
                        <div class="card-body">
                            @us.Description
                        </div>
                        <div class="card-footer">
                            <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                            <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>



    <div class="card mb-2" style="width: 30rem;">
        <div class="card-header p-2">
            <h5 class="card-title">To Verify</h5>
        </div>
        <div class="card-body">
            @foreach (var us in Model.UserStories)
            {
                if (us.State == 3)
                {
                    <div class="card mb-2" style="width: 30rem;">
                        <div class="card-header p-2">
                            <h5 class="card-title">(@us.Id) @us.Title</h5>
                        </div>
                        <div class="card-body">
                            @us.Description
                        </div>
                        <div class="card-footer">
                            <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                            <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="card mb-2" style="width: 30rem;">
        <div class="card-header p-2">
            <h5 class="card-title">Done/done</h5>
        </div>
        <div class="card-body">
            @foreach (var us in Model.UserStories)
            {
                if (us.State == 4)
                {
                    <div class="card mb-2" style="width: 30rem;">
                        <div class="card-header p-2">
                            <h5 class="card-title">(@us.Id) @us.Title</h5>
                        </div>
                        <div class="card-body">
                            @us.Description
                        </div>
                        <div class="card-footer">
                            <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id"><i class="fa fa-trash"></i></a>
                            <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@us.Id"><i class="fa fa-info-circle"></i></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


